<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    android:elevation="8dp"
    tools:background="@drawable/confirmation_dialog_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@android:id/icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="12dp"
            android:importantForAccessibility="no"
            android:tint="?android:colorAccent"
            android:tintMode="src_in"
            tools:src="@drawable/ic_su_24" />

        <TextView
            android:id="@android:id/title"
            style="@android:style/TextAppearance.DeviceDefault.WindowTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            tools:text="Allow %s to have full access of the device?" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.12"
            android:background="?android:colorForeground" />

        <TextView
            android:id="@android:id/button1"
            style="@android:style/Widget.DeviceDefault.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:minHeight="56dp"
            android:padding="8dp"
            android:textAllCaps="false"
            tools:text="Allow all the time"
            tools:textColor="@color/confirmation_dialog_button_text" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.12"
            android:background="?android:colorForeground" />

        <TextView
            android:id="@android:id/button2"
            style="@android:style/Widget.DeviceDefault.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:minHeight="56dp"
            android:padding="8dp"
            android:textAllCaps="false"
            tools:text="Only this time"
            tools:textColor="@color/confirmation_dialog_button_text" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.12"
            android:background="?android:colorForeground" />

        <TextView
            android:id="@android:id/button3"
            style="@android:style/Widget.DeviceDefault.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:minHeight="56dp"
            android:padding="8dp"
            android:textAllCaps="false"
            tools:text="Deny"
            tools:textColor="@color/confirmation_dialog_button_text" />

    </LinearLayout>

</ScrollView>
